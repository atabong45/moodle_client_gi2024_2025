<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxWidth="-Infinity" prefWidth="700.0" style="-fx-background-color: fff; -fx-border-radius: 10;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.moodle.Student.StudentCoursesPanel.StudentChapterCardController">
   <children>
      <VBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <HBox maxWidth="1.7976931348623157E308" onMouseClicked="#deleteChapter">
               <children>
                  <Text disable="true" strokeType="OUTSIDE" strokeWidth="0.0" text="Chapter" visible="false">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Text>
                  <Label fx:id="chapterNum" alignment="BASELINE_LEFT" text="##">
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Text fx:id="chapterName" disable="true" strokeType="OUTSIDE" strokeWidth="0.0" text="Name">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Text>
                  <Region maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                  <Label fx:id="FilesNumber" alignment="BOTTOM_RIGHT" ellipsisString="" maxHeight="1.7976931348623157E308" text="??">
                     <padding>
                        <Insets left="20.0" right="2.0" />
                     </padding>
                  </Label>
                  <Text disable="true" strokeType="OUTSIDE" strokeWidth="0.0" text="files">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <HBox.margin>
                        <Insets top="1.0" />
                     </HBox.margin>
                  </Text>
               </children>
               <padding>
                  <Insets left="10.0" right="5.0" />
               </padding>
            </HBox>
            <VBox spacing="5.0" style="-fx-border-width: 1 0 0 1; -fx-border-color: black; -fx-border-radius: 5; -fx-background-color: f2f2f2; -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
               <children>
                  <VBox fx:id="FilesVbox" spacing="5.0" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets left="10.0" top="2.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
